@model IEnumerable<IngredientViewModel>

@{
    this.ViewData["Title"] = "Всички Продукти";
}

<h1 class="text-center">Продукти</h1>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Номер</th>
            <th scope="col">Име</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ingredient in this.Model)
        {
            <tr>
                <td>@ingredient.Id</td>
                <td>@ingredient.Name</td>
                <td>
                    <a asp-controller="Ingredients" asp-action="Delete" asp-route-id="@ingredient.Id" class="btn btn-danger">Изтрий</a>
                    <a asp-controller="Ingredients" asp-action="Edit" asp-route-id="@ingredient.Id" class="btn btn-warning">Редактирай</a>
                </td>
            </tr>
        }
    </tbody>
</table>