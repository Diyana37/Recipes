@model EditIngredientInputModel

@{
    this.ViewData["Title"] = "Edit Ingredient Page";
}

<h1 class="text-center">Edit Ingredient</h1>

<form method="post" asp-controller="Ingredients" asp-action="Edit" asp-route-id="@this.Model.Id">
    <div asp-validation-summary="All" class="alert-danger"></div>

    <div class="form-group">
        <label asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />
        <span asp-validation-for="Name" class="alert-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="IngredientTypeId"></label>
        <select class="form-select" asp-for="IngredientTypeId" asp-items="this.Model.IngredientTypeItems"></select>
        <span asp-validation-for="IngredientTypeId" class="alert-danger"></span>
    </div>


    <input type="hidden" asp-for="Id" />

    <input type="submit" value="Edit" class="btn btn-primary mt-3" />
</form>