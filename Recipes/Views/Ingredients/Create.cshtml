@model CreateIngredientInputModel

@{
    this.ViewData["Title"] = "Добавяне на Продукт";
}

<h1 class="text-center">Добавяне на Продукт</h1>

<form method="post" asp-controller="Ingredients" asp-action="Create">
    <div asp-validation-summary="All" class="alert-danger"></div>

    <div class="row mt-3">
        <div class="form-group col-4">
            <label asp-for="Name">Име</label>
            <input class="form-control" asp-for="Name" />
            <span asp-validation-for="Name" class="alert-danger"></span>
        </div>
    </div>

    <input type="submit" value="Добави" class="btn btn-primary mt-3" />
</form>