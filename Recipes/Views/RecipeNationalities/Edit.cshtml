@model EditRecipeNationalityInputModel

@{
    this.ViewData["Title"] = "Редактиране на Рецепта";
}

<h1 class="text-center">Редактиране на Рецепта</h1>

<form method="post" asp-controller="RecipeNationalities" asp-action="Edit" asp-route-id="@this.Model.Id">
    <div asp-validation-summary="All" class="alert-danger"></div>

    <div class="form-group">
        <label asp-for="Name">Име</label>
        <input class="form-control" asp-for="Name" />
        <span asp-validation-for="Name" class="alert-danger"></span>
    </div>


    <input type="hidden" asp-for="Id" />

    <input type="submit" value="Редактирай" class="btn btn-primary mt-3" />
</form>